.wrapper__chat-main__messages__message{"data-message-id": "#{message.id}"}
  .wrapper__chat-main__messages__message__upper-info
    %p.wrapper__chat-main__messages__message__upper-info__talker
      = message.user.name
    %p.wrapper__chat-main__messages__message__upper-info__date
      = message.created_at.strftime("%Y年/%m月/%d日 %H時%M分")
  %p.wrapper__chat-main__messages__message__text
    - if message.content.present?
      %p.wrapper__chat-main__messages__message__text__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
